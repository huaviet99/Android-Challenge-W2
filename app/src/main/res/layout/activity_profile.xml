<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    tools:context=".activity.ProfileActivity">

    <ImageButton
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:background="@drawable/circle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/image_avatar" />

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="14dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_camera" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:fontFamily="@font/sofia_pro_semi_bold"
        android:text="Eljad Eendaz"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofia_pro_regular"
        android:text="Edit Profile"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />


    <TextView
        android:id="@+id/tv_title_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:text="Full name"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toStartOf="@+id/cardview_fullname"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_fullname"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_full_name"
        app:strokeColor="#EEEEEE"
        app:strokeWidth="3dp">

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="-100dp"
            android:fontFamily="@font/sofia_pro_medium"
            android:gravity="center_vertical"
            android:hint="Your full name"
            android:padding="16dp"
            android:text="Hua vi van "
            android:textColor="@color/black"
            android:textSize="@dimen/size_17sp"

            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:text="E-mail"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toStartOf="@+id/cardview_email"
        app:layout_constraintTop_toBottomOf="@+id/cardview_fullname" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_email">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/sofia_pro_medium"
            android:gravity="center_vertical"
            android:hint="Your email"
            android:padding="16dp"
            android:text="ronaldo@gmail.com"
            android:textColor="@color/black"
            android:textSize="@dimen/size_17sp"


            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:text="Phone number"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toStartOf="@+id/cardview_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/cardview_email" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_phone_number"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_phone_number">

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/border_outline_cardview"
            android:fontFamily="@font/sofia_pro_medium"
            android:gravity="center_vertical"
            android:hint="Your phone number"
            android:padding="16dp"
            android:text="09090909"
            android:textColor="@color/black"
            android:textSize="@dimen/size_17sp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>